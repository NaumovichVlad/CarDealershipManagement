@model CarDealershipManagement.WebUI.ViewModels.SearchViewModel
<div class="p-5">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    Изображение
                </th>
                <th>
                    <a asp-action="Search" asp-route-sortOrder="@ViewData["BrandSortParm"]">Модель</a>
                </th>
                <th>
                    <a asp-action="Search" asp-route-sortOrder="@ViewData["ManufacturerSortParm"]">Производитель</a>
                </th>
                <th>
                    <a asp-action="Search" asp-route-sortOrder="@ViewData["PriceSortParm"]">Цена</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td class="w-25">
                        @Html.Raw("<img class=\"img-fluid w-25\" src=\"data:image/jpeg;base64," 
											    + Convert.ToBase64String(@car.Picture) + "\" alt=\"Card image cap\"/>")
                    </td>
                    <td>
                        @car.BrandName
                    </td>
                    <td>
                        @car.ManufacturerName
                    </td>
                    <td>
                        @car.Price
                    </td>
                    <td>
                        <a asp-action="RouteToDetailsPage" asp-route-id="@car.Id" class="btn btn-primary">Подробнее</a>
                    </td>
                </tr>  
            }
        </tbody>
    </table>
</div>