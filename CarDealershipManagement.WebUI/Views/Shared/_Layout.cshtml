<!DOCTYPE html>
<html lang="en">
<head>
    <meta charsecolor-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Автосалон</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark text-white">
            @if (User.IsInRole("admin"))
            {
            }
            else
            {
                <div class="d-flex flex-row">
                    <div><a class="nav-link text-white font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a></div>
                    <div><a class="nav-link text-white" asp-area="" asp-controller="CatalogSearch" asp-action="Search">Каталог</a></div>
                </div>
            }
            <div class="d-flex flex-row-reverse">
                @if(User.Identity.IsAuthenticated)
                {
                    <form class="p-2" method="post" asp-controller="Account" asp-action="Logout">
                        <input class="btn btn-dark bg-dark text-white" type="submit" value="Выход"/>
                    </form>
                    <div class="p-2">
                        <a class="nav-link text-white">@User.Identity.Name</a>
                    </div>
                }
                else
                {
                    <div class="p-2">
                        <a class="nav-link text-white"  asp-controller="Account" asp-action="Login">Вход</a>
                    </div>
                    <div class="p-2">
                        <a class="nav-link text-white"  asp-controller="Account" asp-action="Register">Регистрация</a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CarDealershipManagement
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function 
    </script>
    @RenderSection("Scripts", required: false)
    
    
</body>
</html>
