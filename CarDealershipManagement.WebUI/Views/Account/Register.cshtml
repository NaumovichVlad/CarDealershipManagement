@model CarDealershipManagement.WebUI.ViewModels.RegisterViewModel
<h2 class="pt-5">Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <fieldset>
        <div class="form-group">
            <label asp-for="UserName">Логин</label><br />
            <input asp-for="UserName" class="form-control w-25" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input asp-for="Password" class="form-control w-25" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm"></label><br />
            <input asp-for="PasswordConfirm" class="form-control w-25"/>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="form-group pt-3">
            <input type="submit" value="Регистрация" class="btn btn-primary"/>
        </div>
    </fieldset>
</form>
